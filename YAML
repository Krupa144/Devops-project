name: CI Pipeline (Test & Report)

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Install dependencies
        run: npm install

      - name: Run Tests & Generate Report (Pkt 3 i 4)
        run: npm run test:ci

      - name: Upload Test Report (Pkt 4c)
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: raport-testow
          path: junit.xml
      - name: Uruchomienie test√≥w i generowanie raportu
        run: npm run test:ci
        env:
          SUPABASE_URL: ${{ secrets.SUPABASE_URL }}
          SUPABASE_KEY: ${{ secrets.SUPABASE_KEY }}